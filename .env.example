# Bluefone IVR Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# MODE SETTINGS
# ===========================================
# Set to FALSE in production with Google Sheets
MOCK_MODE=TRUE

# ===========================================
# GOOGLE SHEETS CONFIGURATION
# ===========================================
# Option 1: File path (for local development)
GOOGLE_CREDENTIALS_FILE=credentials.json

# Option 2: JSON string (for Render/Railway - paste entire JSON)
# GOOGLE_SERVICE_ACCOUNT_JSON={"type": "service_account", "project_id": "...", ...}

# Spreadsheet ID for your tenant
SHEET_ID_CANNONHILL=your_spreadsheet_id_here

# ===========================================
# TWILIO CONFIGURATION
# ===========================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+61xxxxxxxxx

# ===========================================
# OPENAI (for transcription/summary)
# ===========================================
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxx

# ===========================================
# EMAIL (SendGrid)
# ===========================================
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxx
EMAIL_FROM=noreply@yourdomain.com

# ===========================================
# DEPLOYMENT
# ===========================================
# Base URL of your deployed app (used for callbacks)
BASE_URL=https://your-app.onrender.com

# Cache TTL in seconds (default 180)
SHEET_CACHE_TTL=180
